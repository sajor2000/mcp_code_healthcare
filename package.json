{
  "name": "healthcare-research-mcp",
  "version": "1.0.0",
  "description": "Ask medical research questions in plain English. Get analysis code, visualizations, and comprehensive results instantly.",
  "type": "module",
  "main": "dist/server/index-simplified.js",
  "bin": {
    "healthcare-research-mcp": "./bin/healthcare-research-mcp"
  },
  "keywords": [
    "healthcare",
    "medical-research",
    "omop",
    "clif",
    "strobe",
    "tripod-ai",
    "mcp",
    "medical-ontology",
    "clinical-data",
    "prediction-models",
    "machine-learning"
  ],
  "author": "Healthcare Research MCP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sajor2000/mcp_code_healthcare.git"
  },
  "homepage": "https://github.com/sajor2000/mcp_code_healthcare",
  "bugs": {
    "url": "https://github.com/sajor2000/mcp_code_healthcare/issues"
  },
  "scripts": {
    "setup:dirs": "node scripts/setup-dirs.js",
    "db:init": "node scripts/init-db.js",
    "db:check": "echo 'Database check not implemented'",
    "db:migrate": "echo 'Database migration not implemented'",
    "collect:schemas": "node scripts/collection/collect-all-schemas.js",
    "collect:ontologies": "node scripts/collection/collect-all-ontologies.js",
    "collect:all": "npm run collect:schemas && npm run collect:ontologies",
    "process:all": "node scripts/processing/process-all-data.js",
    "generate:templates": "node scripts/research/generate-templates.js",
    "build": "tsc",
    "start": "node dist/server/index-simplified.js",
    "start:standalone": "node dist/server/index-standalone.js",
    "build:standalone": "tsc src/server/index-standalone.ts --outDir dist/server --module esnext --target es2020 --moduleResolution node --esModuleInterop --skipLibCheck",
    "build:omop": "tsc src/server/index-omop-enhanced.ts src/utils/fetch-guidelines.ts src/utils/enhanced-code-generator.ts src/utils/fetch-omop-cdm.ts src/utils/medical-ontologies.ts src/utils/fetch-tripod-ai.ts --outDir dist --module esnext --target es2020 --moduleResolution node --esModuleInterop --skipLibCheck",
    "build:simplified": "tsc src/server/index-simplified.ts src/utils/fetch-guidelines.ts src/utils/enhanced-code-generator.ts src/utils/fetch-omop-cdm.ts src/utils/medical-ontologies.ts src/utils/fetch-tripod-ai.ts --outDir dist --module esnext --target es2020 --moduleResolution node --esModuleInterop --skipLibCheck",
    "start:simplified": "node dist/server/index-simplified.js",
    "dev": "tsx watch src/server/index.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "docs:generate": "typedoc --out docs src/index.ts",
    "backup:db": "node scripts/backup/backup-databases.js",
    "backup:config": "node scripts/backup/backup-config.js",
    "docker:build": "docker build -t healthcare-research-mcp .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data healthcare-research-mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "better-sqlite3": "^9.6.0",
    "csv-parse": "^5.5.0",
    "xml2js": "^0.6.0",
    "dotenv": "^16.0.0",
    "p-queue": "^7.4.1",
    "axios": "^1.6.0",
    "node-fetch": "^3.3.0",
    "cheerio": "^1.0.0-rc.12",
    "d3": "^7.8.0",
    "jsdom": "^24.0.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "node-cache": "^5.1.2",
    "crypto-js": "^4.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/d3": "^7.4.0",
    "@types/jsdom": "^21.1.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "vitest": "^1.0.0",
    "rollup": "^4.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-commonjs": "^25.0.0"
  }
}